<Page x:Class="ZodiacSignProject.Pages.Client.EditProfile.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="EditProfilePage">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Имя"
                       Foreground="#FFF"
                       Style="{StaticResource Rosarivo}"
                       FontSize="27"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBox x:Name="NameBox"
                     Text="{Binding NameClient}"
                     Grid.Row="0"
                     Grid.Column="1"
                     Width="410"
                     Height="50"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Padding="20 0 0 0"
                     Background="#4F568D"
                     Foreground="#FFF"
                     Style="{StaticResource Rosarivo}"
                     FontSize="20">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="30" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Фамилия"
                       Foreground="#FFF"
                       Style="{StaticResource Rosarivo}"
                       FontSize="27"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBox x:Name="SurnameBox"
                     Text="{Binding SurnameClient}"
                     Grid.Row="1"
                     Grid.Column="1"
                     Width="410"
                     Height="50"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Padding="20 0 0 0"
                     Background="#4F568D"
                     Foreground="#FFF"
                     Style="{StaticResource Rosarivo}"
                     FontSize="20">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="30" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="Почта"
                       Foreground="#FFF"
                       Style="{StaticResource Rosarivo}"
                       FontSize="27"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBox x:Name="EmailBox"
                     Text="{Binding EmailClient}"
                     Grid.Row="2"
                     Grid.Column="1"
                     Width="410"
                     Height="50"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Padding="20 0 0 0"
                     Background="#4F568D"
                     Foreground="#FFF"
                     Style="{StaticResource Rosarivo}"
                     FontSize="20">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="30" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button x:Name="EditDataBtn"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Grid.Column="0"
                    Width="300"
                    Height="60"
                    Content="Изменить данные"
                    Background="#4F568D"
                    Foreground="#FFF"
                    Style="{StaticResource Rosarivo}"
                    FontSize="30"
                    Click="EditDataBtn_OnClick">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="30" />
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>
    </Grid>
</Page>